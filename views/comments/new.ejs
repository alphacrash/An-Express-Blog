<% include ../partials/header.ejs %>

<div class="container">
    <h1 class="mt-4 mb-4">Add comment to "<%= post.title %>"</h1>
    <form class="ml-4" action="/posts/<%= post._id %>/comments/" method="POST">
        <div class="form-group">
            <label>Comment</label>
            <input class="form-control" type="text" name="comment[text]" placeholder="Enter comment">
        </div>
        <input type="submit" class="btn btn-primary">
    </form>
    <a class="m-4" href="/posts/<%= post._id %>">Go Back</a>
</div>

<% include ../partials/footer.ejs %>